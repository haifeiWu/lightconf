		<!--<filter-name>crossDomainRequestFilter</filter-name>-->
		<!--<filter-class>com.lightconf.admin.web.filter.CrossDomainRequestFilter</filter-class>-->
	<!--</filter>-->
	<!--<filter-mapping>-->
		<!--<filter-name>crossDomainRequestFilter</filter-name>-->
